{
	"name": "exastro-it-automation-docs",
	"containerUser": "sphinx",
	"updateRemoteUserUID": true,
	"build": {
		"dockerfile": "Dockerfile",
		"args": {
			"HTTP_PROXY": "${localEnv:HTTP_PROXY}",
		}
	},
 "runArgs": ["--env-file",".devcontainer/.env"],
	"settings": {
		"terminal.integrated.profiles.linux": {
			"bash": {
				"path": "/bin/bash"
			}
		},
		"terminal.integrated.defaultProfile.linux": "bash",
  "[rst]": {
   "editor.fontFamily": "'Illusion N', 'BIZ UDGothic','BIZ UDゴシック','MS ゴシック'"
  },
  "[restructuredtext]": {
   "editor.fontFamily": "'Illusion N', 'BIZ UDGothic','BIZ UDゴシック','MS ゴシック'"
  },
  "restructuredtext.linter.doc8.extraArgs": [
   "--config",
   "${workspaceFolder}/doc8.ini"
  ],
 },
	"extensions": [
		"MS-CEINTL.vscode-language-pack-ja",
		"ms-python.python",
		"donjayamanne.githistory",
		"eamodio.gitlens",
		"mhutchie.git-graph",
		"lextudio.restructuredtext",
		"lextudio.restructuredtext-pack",
		"trond-snekvik.simple-rst",
		"ms-vscode.live-server",
		"searKing.preview-vscode",
		"hediet.vscode-drawio",
		"nopeslide.vscode-drawio-plugin-mermaid",
  		"l13rary.l13-diff",
		"swyddfa.esbonio",
	],
	"customizations": {
		"vscode": {
   "settings": {
    "terminal.integrated.profiles.linux": {
     "bash": {
      "path": "/bin/bash"
     }
    },
    "terminal.integrated.defaultProfile.linux": "bash",
    "[rst]": {
     "editor.fontFamily": "'Illusion N', 'BIZ UDGothic','BIZ UDゴシック','MS ゴシック'"
    },
    "[restructuredtext]": {
     "editor.fontFamily": "'Illusion N', 'BIZ UDGothic','BIZ UDゴシック','MS ゴシック'"
    },
    "restructuredtext.linter.doc8.extraArgs": [
     "--config",
     "${workspaceFolder}/doc8.ini"
    ],
   },
   "extensions": [
    "MS-CEINTL.vscode-language-pack-ja",
    "ms-python.python",
    "donjayamanne.githistory",
    "eamodio.gitlens",
    "mhutchie.git-graph",
    "lextudio.restructuredtext",
    "lextudio.restructuredtext-pack",
    "trond-snekvik.simple-rst",
    "ms-vscode.live-server",
    "searKing.preview-vscode",
    "hediet.vscode-drawio",
    "nopeslide.vscode-drawio-plugin-mermaid",
    "l13rary.l13-diff",
    "swyddfa.esbonio",
   ],
  },
 },
	"onCreateCommand": "/workspace/init.sh",
	"postAttachCommand": "/workspace/start-autobuild.sh",
	"workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind",
	"mounts": [
		"source=/mnt/mainte/talisman,target=/mnt/mainte/talisman,type=bind",
		"source=${localEnv:HOME}/.talisman/bin,target=/home/almalinux/.talisman/bin,type=bind",
		"source=${localEnv:HOME}/.gitconfig,target=/home/sphinx/.gitconfig,type=bind",
		"source=${localEnv:HOME}/.netrc,target=/home/sphinx/.netrc,type=bind",
		"source=/etc/pki/ca-trust/extracted/pem/tls-ca-bundle.pem,target=/etc/pki/ca-trust/extracted/pem/tls-ca-bundle.pem,type=bind",
		"source=/usr/share/pki/ca-trust-source/anchors/UserRootCertificate.crt,target=/etc/ssl/certs/ca-certificates.crt,type=bind",
],
	"workspaceFolder": "/workspace",
	"containerEnv": {
		"HTTP_PROXY": "${localEnv:HTTP_PROXY}",
		"http_proxy": "${localEnv:HTTP_PROXY}",
		"HTTPS_PROXY": "${localEnv:HTTP_PROXY}",
		"https_proxy": "${localEnv:HTTP_PROXY}",
		"NO_PROXY": "localhost,127.0.0.1",
		"no_proxy": "localhost,127.0.0.1",
		"SSL_CERT_FILE": "/etc/pki/ca-trust/extracted/pem/tls-ca-bundle.pem",
		"REQUESTS_CA_BUNDLE": "/etc/pki/ca-trust/extracted/pem/tls-ca-bundle.pem",
		"NODE_EXTRA_CA_CERTS": "/etc/ssl/certs/ca-certificates.crt",
  "NODE_TLS_REJECT_UNAUTHORIZED": "1",
	},
}
